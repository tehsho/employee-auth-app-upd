{
  "ConnectionStrings": {
    "DefaultConnection": "Server=Tehsho;Database=EmployeeAuthDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Issuer": "EmployeeAuth",
    "Audience": "EmployeeAuth",
    "Key": "REPLACE_WITH_A_LONG_RANDOM_SECRET_KEY_32+_CHARS"
  },
  "PasswordPolicy": {
    "MinLength": 12,
    "MinSpecialChars": 2,
    "AllowedSpecialChars": "@#!%&"
  },
  "Email": {
    "Provider": "Console",
    "From": "no-reply@employeeauth.local",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "User": "YOUR_EMAIL@gmail.com",
      "Password": "USE_APP_PASSWORD",
      "UseStartTls": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
